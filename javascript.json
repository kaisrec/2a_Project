    //------------------------------------------------
    //AngularJs snippet ng-Directive for Angularjs 1.4
    //------------------------------------------------
    "ng-vm":{
        "prefix": "ng-vm",
         "body":["angular.module('myApp',[])",
                ".directive('phone', function () {",
                "\t return {",
                "\t\t scope: true,",
                "\t\t bindToController: {name:'@'},",
                "\t\t controller: function(){},",
                "\t\t controllerAs: 'vm',",
                "\t\t template: '<h3>{{vm.$1}}</h3>',",
                "\t\t link: function(scope, elem, attr){",
                "\t\t\t elem.on('click',function(){",
                "\t\t\t console.log(scope.vm.$2)",
                "\t\t\t })",
                "\t\t }",
                "\t\t };",
                "\t });"
                ],
         "description":"Angularjs Directive with controllerAs "
        }
